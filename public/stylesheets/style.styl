html 
  height: 100%
  width: 100%

body
  background-color: #3C5A76;
  background-image: url(/images/tumblr_bg.png)
  background-repeat: no-repeat;
  background-position: center center;
  overflow: hidden;
  -webkit-perspective: 1000px;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  width: 100%
  height: 100%
  font-family: 'Neuton', serif;

a, a:visited
  color: #00B7FF

h1
  margin: 0

h1.cursive
  color: #222;
  font-family: 'La Belle Aurore', cursive;
  font-size: 60px
  left: -130px
  top: 50px
  margin-top: -100px
  position: relative
  text-align: center
  text-shadow: 2px 3px 3px rgba(255,255,255,0.2);
  -webkit-transform: rotate(-5deg)

footer
  position: absolute
  bottom: 0
  text-align: center
  width: 100%
  z-index: 10
  p
    float: left

.welcome
  margin-top: -60px

.slide
  blockquote
    font-size: 45px
    width: 450px
    line-height: 1.5em
    text-align: center

    em
      clear: both
      color: #aaa
      float: right
      margin-right 20px

.off-stage
  .slide
    display none

.bg
  position: absolute
  z-index: 7
  height: 100%
  width: 100%

.stage
  margin: 0;
  padding: 0;
  position: relative;
  -webkit-transform-style: preserve-3d;
  z-index: 8;
  width: 1150px;
  height: 675px;

.slide
  background-color: transparent;
  color: white;
  box-shadow: none;
  font-size: 50px
  height: 675px;
  padding: 20px 40px;
  position: absolute;
  width: 1150px;
  -webkit-box-orient: vertical;
  -webkit-box-sizing: border-box;
  -webkit-transition: -webkit-transform 0.8s ease-in-out, opacity 1.2s ease-in-out;
  text-shadow: 1px 3px 3px rgba(0,0,0,0.2);

.centercontents
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  h1
    text-align: center

.code
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 3px 15px #000;

.far-past
  opacity: 0;
  -webkit-transform: translateZ(-600px) rotateY(-180deg) translateZ(600px)

.past
  opacity: 0;
  -webkit-transform: translateZ(-600px) rotateY(-90deg) translateZ(600px)

.current
  opacity: 1
  -webkit-transform: translateZ(-600px) rotateY(0deg) translateZ(600px)

.future
  opacity: 0;
  -webkit-transform: translateZ(-600px) rotateY(90deg) translateZ(600px)
  
.far-future
  opacity: 0;
  -webkit-transform: translateZ(-600px) rotateY(180deg) translateZ(600px);
